
<%= render 'navbar' %>
<div class="container">
  <div class="d-flex justify-content-center text-center">
    <div>
        <%= image_tag "logo.svg", class: "logo mb-3 mt-5" %>
      <h1 style="font-size: 5rem;" class="mb-1">Mr. Cocktail</h1>
      <p>Create you own drink and share with others!</p>
      <%= link_to new_cocktail_path do %>
      <button type="button" class="btn btn-danger mt-3 mb-5">Create drink</button>
      <% end %>
    </div>
    <div>
    </div>
  </div>
<% if @cocktails.any? %>
  <div class="d-flex justify-content-center">
    <h2 class="text-center m-5">List of cocktails</h2>
  </div>

  <div class="row d-flex justify-content-around ">
    <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-6 col-lg-4 mb-5">
      <% if cocktail.photo.attached? %>
          <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= url_for(cocktail.photo) %>)">
          <h2><%= cocktail.name %></h2>
        </div>
          <% end %>

      <% else %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category" style="background-color: black;">
          <h2><%= cocktail.name %></h2>
        </div>
        <% end %>
      <% end %>

    </div>
    <% end %>
  </div>

  <% else %>
      <div class="d-flex justify-content-between ms-5">
        <h2>You don't have any cocktails yet. Create a cocktail!</h2>
      </div>
  <% end %>
</div>









