<%= render 'navbar' %>
<div class="container">
  <div class="row justify-content-center m-5">
    <div class="col-md-6">
      <h1>Create a new cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
